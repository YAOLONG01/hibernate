<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <hibernate-mapping>
        	<class name="cn.hjycjc.spring.hibernate.helloworld.Worker" table="worker_pay">
        		<!--特殊  -->
        		<id name="id" type="java.lang.Integer">
        			<column name="ID"></column>
        			<generator class="native"></generator>
        		</id>
        		
        		<property name="name" type="java.lang.String">
        			<column name="name"></column>
        		</property>
        		
        		<!--映射组成关系，pay中没有主键是值类型不是实体类型 -->
        		<component name="pay" class="cn.hjycjc.spring.hibernate.helloworld.Pay">
        			<property name="mPay">
        				<column name="mPay"></column>
        			</property>
        			<property name="yPay">
        				<column name="yPay"></column>
        			</property>
        			<property name="vocationWithPay">
        				<column name="vocationWithPay"></column>
        			</property>
        			
        		</component>
        	</class>
        
        </hibernate-mapping>